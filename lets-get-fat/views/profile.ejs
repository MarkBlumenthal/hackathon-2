<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script> <!-- jQuery for AJAX -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

</head>
<body class="container">
  <h1 class="mt-4">Welcome, <%= user.name %>!</h1>
  
  <form id="profileForm" class="mb-3">
    <input type="hidden" name="id" value="<%= user.id %>">
    <div class="mb-3">
      <label for="age" class="form-label">Age:</label>
      <input type="number" id="age" name="age" class="form-control" required>
    </div>
    <div class="mb-3">
      <label for="height" class="form-label">Height (in cm):</label>
      <input type="number" id="height" name="height" class="form-control" required>
    </div>
    <div class="mb-3">
      <label for="current_weight" class="form-label">Current Weight (in kg):</label>
      <input type="number" id="current_weight" name="current_weight" class="form-control" required>
    </div>
    <div class="mb-3">
      <label for="desired_weight" class="form-label">Desired Weight (in kg):</label>
      <input type="number" id="desired_weight" name="desired_weight" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  
  <div id="successMessage" style="display:none;" class="alert alert-success">
    Profile updated successfully!
    <button id="allCarbDiet" class="btn btn-outline-primary">All Carb Diet</button>
    <button id="allDessertDiet" class="btn btn-outline-secondary">All Dessert Diet</button>
  </div>

  <!-- diet plan tables -->
  <div id="allCarbDietTable" style="display:none;">
    <h2>All Carb Diet Plan</h2>
    <table class="table">
      <thead>
        <tr><th>Day</th><th>Meal</th></tr>
      </thead>
      <tbody>
        <tr><td>Day 1</td><td>Pasta</td></tr>
        <tr><td>Day 2</td><td>Bread</td></tr>
        <tr><td>Day 3</td><td>Bread</td></tr>
        <tr><td>Day 4</td><td>Bread</td></tr>
        <tr><td>Day 5</td><td>Bread</td></tr>
        <tr><td>Day 6</td><td>Bread</td></tr>
        <tr><td>Day 7</td><td>Bread</td></tr> 
      </tbody>
    </table>
  </div>
  
  <div id="allDessertDietTable" style="display:none;">
    <h2>All Dessert Diet Plan</h2>
    <table class="table">
      <thead>
        <tr><th>Day</th><th>Meal</th></tr>
      </thead>
      <tbody>
        <tr><td>Day 1</td><td>Cake</td></tr>
        <tr><td>Day 2</td><td>Ice Cream</td></tr>
        <tr><td>Day 2</td><td>Ice Cream</td></tr>
        <tr><td>Day 2</td><td>Ice Cream</td></tr>
        <tr><td>Day 2</td><td>Ice Cream</td></tr>
        <tr><td>Day 2</td><td>Ice Cream</td></tr>
        <tr><td>Day 2</td><td>Ice Cream</td></tr>  
      </tbody>
    </table>
  </div>

  <!-- Exercise Plan for All Carb Diet -->
<div id="allCarbExerciseTable" style="display:none;">
    <h2>All Carb Exercise Plan</h2>
    <table class="table">
      <thead>
        <tr><th>Day</th><th>Exercise</th></tr>
      </thead>
      <tbody>
        <tr><td>Day 1</td><td>30 min run</td></tr>
        <tr><td>Day 2</td><td>15 min cycling</td></tr>
        <tr><td>Day 3</td><td>15 min cycling</td></tr>
        <tr><td>Day 4</td><td>15 min cycling</td></tr>
        <tr><td>Day 5</td><td>15 min cycling</td></tr>
        <tr><td>Day 6</td><td>15 min cycling</td></tr>
        <tr><td>Day 7</td><td>15 min cycling</td></tr> 
      </tbody>
    </table>
  </div>
  
  <!-- Exercise Plan for All Dessert Diet -->
  <div id="allDessertExerciseTable" style="display:none;">
    <h2>All Dessert Exercise Plan</h2>
    <table class="table">
      <thead>
        <tr><th>Day</th><th>Exercise</th></tr>
      </thead>
      <tbody>
        <tr><td>Day 1</td><td>20 min yoga</td></tr>
        <tr><td>Day 2</td><td>30 min brisk walk</td></tr>
        <tr><td>Day 3</td><td>30 min brisk walk</td></tr>
        <tr><td>Day 4</td><td>30 min brisk walk</td></tr>
        <tr><td>Day 5</td><td>30 min brisk walk</td></tr>
        <tr><td>Day 6</td><td>30 min brisk walk</td></tr>
        <tr><td>Day 7</td><td>30 min brisk walk</td></tr>
      </tbody>
    </table>
  </div>
  
  

<!-- Form for updating current weight -->
<div class="update-weight-form">
  <h3>Update Your Current Weight</h3>
  <form id="updateWeightForm" action="/update-weight" method="post">
    <input type="hidden" name="id" value="<%= user.id %>">
    <div class="mb-3">
      <label for="updatedWeight" class="form-label">Current Weight (in kg):</label>
      <input type="number" class="form-control" id="updatedWeight" name="current_weight" required>
    </div>
    <button type="submit" class="btn btn-primary">Update Weight</button>
  </form>
</div>

<!-- Container for the weight history graph, initially hidden -->
<div id="weightChartContainer" style="display: none;">
  <h2>Your Weight History</h2>
  <canvas id="weightChart"></canvas>
</div>


  
  <script>
    $(document).ready(function(){
      // Handling the profile update form submission
      $('#profileForm').on('submit', function(e){
        e.preventDefault(); // Prevent default form submission
        var formData = $(this).serialize(); // Serialize form data
        $.ajax({
          url: '/update-profile',
          type: 'POST',
          data: formData,
          success: function(response) {
            $('#profileForm').hide(); // Hide form on success
            $('#successMessage').show(); // Show success message and buttons
          },
          error: function() {
            alert('Failed to update profile. Please try again.');
          }
        });
      });
  
      // Handling diet preference button clicks
      $('#allCarbDiet, #allDessertDiet').click(function() {
        var dietPreference = $(this).attr('id') === 'allCarbDiet' ? 'All Carb' : 'All Dessert';
        $.ajax({
          url: '/update-diet',
          type: 'POST',
          data: { id: '<%= user.id %>', diet: dietPreference },
          success: function(response) {
            alert('Diet preference updated successfully!');
            // Toggle visibility of both diet and exercise tables based on selection
            if (dietPreference === 'All Carb') {
              $('#allDessertDietTable, #allDessertExerciseTable').hide();
              $('#allCarbDietTable, #allCarbExerciseTable').show();
            } else {
              $('#allCarbDietTable, #allCarbExerciseTable').hide();
              $('#allDessertDietTable, #allDessertExerciseTable').show();
            }
          },
          error: function() {
            alert('Failed to update diet preference. Please try again.');
          }
        });
      });
    });
</script>



  <script>
    $(document).ready(function(){
      window.weightChart = null; // Initialize the weight chart as null
    
      $('#updateWeightForm').on('submit', function(e){
        e.preventDefault();
        var formData = $(this).serialize();
        $.ajax({
          url: '/update-weight',
          type: 'POST',
          data: formData,
          success: function(response) {
            updateGraph(response.startingWeight, response.updatedWeight, response.desiredWeight);
            $('#weightChartContainer').show();
          },
          error: function() {
            alert('Failed to update weight. Please try again.');
          }
        });
      });
    
      function updateGraph(startingWeight, updatedWeight, desiredWeight) {
        const ctx = document.getElementById('weightChart').getContext('2d');
        if (window.weightChart !== null) {
          window.weightChart.destroy(); // Only destroy if it exists
        }
        window.weightChart = new Chart(ctx, {
          type: 'bar',
          data: {
            labels: ['Starting Weight', 'Updated Weight', 'Desired Weight'],
            datasets: [{
              label: 'Weight (kg)',
              data: [startingWeight, updatedWeight, desiredWeight],
              backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(75, 192, 192, 0.2)'
              ],
              borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(75, 192, 192, 1)'
              ],
              borderWidth: 1
            }]
          },
          options: {
            scales: {
              y: {
                beginAtZero: true
              }
            }
          }
        });
      }
    });
    </script>



 
  
  
 
