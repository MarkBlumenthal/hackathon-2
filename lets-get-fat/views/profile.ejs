<!-- Form for updating current weight -->
<div class="update-weight-form">
  <h3>Update Your Current Weight</h3>
  <h5>And check out your personalized weight graph below to track your progress</h5>
  <form id="updateWeightForm" action="/update-weight" method="post">
    <input type="hidden" name="id" value="<%= user.id %>">
    <div class="mb-3">
      <label for="updatedWeight" class="form-label">Current Weight (in kg):</label>
      <input type="number" class="form-control" id="updatedWeight" name="current_weight" required>
    </div>
    <button type="submit" class="btn btn-primary">Update Weight</button>
  </form>
</div>

<!-- Container for the weight history graph, initially hidden -->
<div id="weightChartContainer" style="display: none;">
  <h2>Your Weight History</h2>
  <canvas id="weightChart"></canvas>
</div>

<div id="weightMessage" class="alert" style="display:none;"></div>

  
  <script>
    $(document).ready(function(){
      // Handling the profile update form submission
      $('#profileForm').on('submit', function(e){
        e.preventDefault(); // Prevent default form submission
        var formData = $(this).serialize(); // Serialize form data
        $.ajax({
          url: '/update-profile',
          type: 'POST',
          data: formData,
          success: function(response) {
            $('#profileForm').hide(); // Hide form on success
            $('#successMessage').show(); // Show success message and buttons
          },
          error: function() {
            alert('Failed to update profile. Please try again.');
          }
        });
      });
  
      // Handling diet preference button clicks
      $('#allCarbDiet, #allDessertDiet').click(function() {
        var dietPreference = $(this).attr('id') === 'allCarbDiet' ? 'All Carb' : 'All Dessert';
        $.ajax({
          url: '/update-diet',
          type: 'POST',
          data: { id: '<%= user.id %>', diet: dietPreference },
          success: function(response) {
            alert('Diet preference updated successfully!');
            // Toggle visibility of both diet and exercise tables based on selection
            if (dietPreference === 'All Carb') {
              $('#allDessertDietTable, #allDessertExerciseTable').hide();
              $('#allCarbDietTable, #allCarbExerciseTable').show();
            } else {
              $('#allCarbDietTable, #allCarbExerciseTable').hide();
              $('#allDessertDietTable, #allDessertExerciseTable').show();
            }
          },
          error: function() {
            alert('Failed to update diet preference. Please try again.');
          }
        });
      });
    });
</script>

    <script>
      $(document).ready(function() {
        window.weightChart = null; // Initialize the weight chart as null
      
        $('#updateWeightForm').on('submit', function(e) {
          e.preventDefault();
          var formData = $(this).serialize();
          $.ajax({
            url: '/update-weight',
            type: 'POST',
            data: formData,
            success: function(response) {
              updateGraph(response.startingWeight, response.updatedWeight, response.desiredWeight);
              displayWeightMessage(response.updatedWeight, response.desiredWeight);
              $('#weightChartContainer').show();
            },
            error: function() {
              alert('Failed to update weight. Please try again.');
            }
          });
        });
      
        function updateGraph(startingWeight, updatedWeight, desiredWeight) {
          const ctx = document.getElementById('weightChart').getContext('2d');
          if (window.weightChart !== null) {
            window.weightChart.destroy(); // Only destroy if it exists
          }
          window.weightChart = new Chart(ctx, {
            type: 'bar',
            data: {
              labels: ['Starting Weight', 'Updated Weight', 'Desired Weight'],
              datasets: [{
                label: 'Weight (kg)',
                data: [startingWeight, updatedWeight, desiredWeight],
                backgroundColor: [
                  'rgba(255, 99, 132, 0.2)',
                  'rgba(54, 162, 235, 0.2)',
                  'rgba(75, 192, 192, 0.2)'
                ],
                borderColor: [
                  'rgba(255, 99, 132, 1)',
                  'rgba(54, 162, 235, 1)',
                  'rgba(75, 192, 192, 1)'
                ],
                borderWidth: 1
              }]
            },
            options: {
              scales: {
                y: {
                  beginAtZero: true
                }
              }
            }
          });
        }
      
        function displayWeightMessage(updatedWeight, desiredWeight) {
          updatedWeight = Number(updatedWeight);
  desiredWeight = Number(desiredWeight);
          const messageElement = document.getElementById('weightMessage');
          if (updatedWeight < desiredWeight) {
            messageElement.innerHTML = 'Come on, you can do better, you just need to eat more!';
            messageElement.className = 'alert alert-warning';
          } else if (updatedWeight === desiredWeight) {
            messageElement.innerHTML = 'Amazing! your reached your fattest self. why not get fatter?';
            messageElement.className = 'alert alert-success';
          } else if (updatedWeight > desiredWeight) {
            messageElement.innerHTML = 'Congrats, you are over your desired weight! You must be huge!';
            messageElement.className = 'alert alert-success';
          }
          messageElement.style.display = 'block';
        }
      });
      </script>
      
 
  
  
 
