<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script> <!-- jQuery for AJAX -->
</head>
<body>
  <h1>Welcome, <%= user.name %>!</h1>
  <form id="profileForm">
    <input type="hidden" name="id" value="<%= user.id %>">
    <label for="age">Age:</label>
    <input type="number" id="age" name="age" required>
    <label for="height">Height (in cm):</label>
    <input type="number" id="height" name="height" required>
    <label for="current_weight">Current Weight (in kg):</label>
    <input type="number" id="current_weight" name="current_weight" required>
    <label for="desired_weight">Desired Weight (in kg):</label>
    <input type="number" id="desired_weight" name="desired_weight" required>
    <button type="submit">Submit</button>
  </form>
  <div id="successMessage" style="display:none;">
    Profile updated successfully!
    <button id="allCarbDiet">All Carb Diet</button>
    <button id="allDessertDiet">All Dessert Diet</button>
  </div>

  <!-- diet plan tables -->
<div id="allCarbDietTable" style="display:none;">
    <h2>All Carb Diet Plan</h2>
    <table>
      <tr><th>Day</th><th>Meal</th></tr>
      <tr><td>Day 1</td><td>Pasta</td></tr>
      <tr><td>Day 2</td><td>Bread</td></tr>
      <tr><td>Day 3</td><td>Rice</td></tr>
      <tr><td>Day 4</td><td>Rice</td></tr>
      <tr><td>Day 5</td><td>Rice</td></tr>
      <tr><td>Day 6</td><td>Rice</td></tr>
      <tr><td>Day 7</td><td>Rice</td></tr>
    </table>
  </div>
  
  <div id="allDessertDietTable" style="display:none;">
    <h2>All Dessert Diet Plan</h2>
    <table>
      <tr><th>Day</th><th>Meal</th></tr>
      <tr><td>Day 1</td><td>Cake</td></tr>
      <tr><td>Day 2</td><td>Ice Cream</td></tr>
      <tr><td>Day 3</td><td>Chocolate</td></tr>
      <tr><td>Day 4</td><td>Chocolate</td></tr>
      <tr><td>Day 5</td><td>Chocolate</td></tr>
      <tr><td>Day 6</td><td>Chocolate</td></tr>
      <tr><td>Day 7</td><td>Chocolate</td></tr>
    </table>
  </div>
  

  <script>
    $(document).ready(function(){
      $('#profileForm').on('submit', function(e){
        e.preventDefault(); // Prevent default form submission
        var formData = $(this).serialize(); // Serialize form data
        $.ajax({
          url: '/update-profile',
          type: 'POST',
          data: formData,
          success: function(response) {
            $('#profileForm').hide(); // Hide form on success
            $('#successMessage').show(); // Show success message and buttons
          },
          error: function() {
            alert('Failed to update profile. Please try again.');
          }
        });
      });

      // Handle diet preference buttons
      $('#allCarbDiet, #allDessertDiet').click(function() {
        var dietPreference = $(this).attr('id') === 'allCarbDiet' ? 'All Carb' : 'All Dessert';
        $.ajax({
          url: '/update-diet',
          type: 'POST',
          data: { id: '<%= user.id %>', diet: dietPreference },
          success: function(response) {
            alert('Diet preference updated successfully!');
          },
          error: function() {
            alert('Failed to update diet preference. Please try again.');
          }
        });
      });
    });

    $('#allCarbDiet, #allDessertDiet').click(function() {
  var dietPreference = $(this).attr('id') === 'allCarbDiet' ? 'All Carb' : 'All Dessert';
  $.ajax({
    url: '/update-diet',
    type: 'POST',
    data: { id: '<%= user.id %>', diet: dietPreference },
    success: function(response) {
      alert('Diet preference updated successfully!');
      if (dietPreference === 'All Carb') {
        $('#allDessertDietTable').hide();
        $('#allCarbDietTable').show();
      } else {
        $('#allCarbDietTable').hide();
        $('#allDessertDietTable').show();
      }
    },
    error: function() {
      alert('Failed to update diet preference. Please try again.');
    }
  });
});

  </script>
 
<form action="/logout" method="post">
    <button type="submit">Logout</button>
  </form>
  
</body>
</html>


